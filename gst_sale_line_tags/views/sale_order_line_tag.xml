<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sale_order_line_tag_form" model="ir.ui.view">
        <field name="name">sale.order.line.tag-form</field>
        <field name="model">sale.order.line.tag</field>
        <field name="arch" type="xml">
            <form>
                <group name="basic_info" string="Tag Line State">
                    <field name="name" />
                    <field name="html_color" widget="color" />
                </group>
            </form>
        </field>
    </record>

    <record id="sale_order_line_tag_tree" model="ir.ui.view">
        <field name="name">sale.order.line.tag.tree</field>
        <field name="model">sale.order.line.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="html_color" widget="color" />
            </tree>
        </field>
    </record>

    <record id="sale_order_line_tag_action" model="ir.actions.act_window">
        <field name="name">sale.order.line.tag.action</field>
        <field name="res_model">sale.order.line.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="sale_order_line_tag_menu"
        name="State Tag Sale Line "
        groups="sales_team.group_sale_manager"
        parent="sale.menu_sale_config"
        action="sale_order_line_tag_action"
    />

</odoo>
